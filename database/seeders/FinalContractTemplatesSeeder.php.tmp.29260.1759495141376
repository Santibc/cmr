<?php

namespace Database\Seeders;

use Illuminate\Database\Seeder;
use App\Models\ContractTemplate;

class FinalContractTemplatesSeeder extends Seeder
{
    public function run()
    {
        $dynamicFields = json_encode(['dia', 'mes', 'anio', 'nombre', 'dni', 'forma_de_pago', 'imagen_firma', 'aclaracion']);

        // Template Low Ticket - basado en LOW T.pdf
        ContractTemplate::create([
            'name' => 'Low Ticket',
            'html_content' => $this->getLowTicketHtml(),
            'dynamic_fields' => $dynamicFields,
        ]);
        $this->command->info('Template Low Ticket creado!');

        // Template 2 Cuotas - basado en 2 COUTAS.pdf
        ContractTemplate::create([
            'name' => '2 Cuotas',
            'html_content' => $this->get2CuotasHtml(),
            'dynamic_fields' => $dynamicFields,
        ]);
        $this->command->info('Template 2 Cuotas creado!');

        // Template 3 Cuotas - basado en 3 CUOTAS.pdf
        ContractTemplate::create([
            'name' => '3 Cuotas',
            'html_content' => $this->get3CuotasHtml(),
            'dynamic_fields' => $dynamicFields,
        ]);
        $this->command->info('Template 3 Cuotas creado!');

        // Template Beca - basado en BECA.pdf
        ContractTemplate::create([
            'name' => 'Beca',
            'html_content' => $this->getBecaHtml(),
            'dynamic_fields' => $dynamicFields,
        ]);
        $this->command->info('Template Beca creado!');

        // Template Full Pago - basado en FULL 25.pdf
        ContractTemplate::create([
            'name' => 'Full Pago',
            'html_content' => $this->getFullPagoHtml(),
            'dynamic_fields' => $dynamicFields,
        ]);
        $this->command->info('Template Full Pago creado!');
    }

