        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            font-size: 16pt;
            margin: 20px 0;
            font-weight: bold;
            text-transform: uppercase;
        }
        .fecha {
            text-align: left;
            margin-bottom: 20px;
            font-weight: normal;
        }
        .section {
            margin-bottom: 15px;
        }
        .article-title {
            font-weight: bold;
            margin: 20px 0 10px 0;
        }
        .subsection {
            margin: 10px 0;
            padding-left: 20px;
        }
        .parties {
            margin: 20px 0;
            font-weight: bold;
        }
        .signature-section {
            margin-top: 50px;
            page-break-inside: avoid;
        }
        .signature-box {
            margin-top: 40px;
            text-align: left;
        }
        .signature-line {
            margin: 20px 0 10px 0;
            min-height: 60px;
